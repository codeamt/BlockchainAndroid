<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:layout_margin="@dimen/space8dp"
    android:textAlignment="viewStart"
    android:layout_gravity="start">
    <ImageView
        android:id="@+id/widget_before_img"
        android:contentDescription="@string/logo_description"
        android:layout_width="@dimen/space50dp"
        android:layout_height="@dimen/space50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space10dp"
        android:layout_marginBottom="@dimen/space50dp"
        android:src="@drawable/ic_blockchain"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/widget_before_img"
        android:contentDescription="@string/widget_placeholder"
        android:text="@string/widget_placeholder"
        android:textColor="#000"
        android:layout_margin="@dimen/space4dp"
        android:layout_marginStart="@dimen/space10dp"
        android:textSize="@dimen/size16sp"
        android:fillViewport="false"
        android:textStyle="bold"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="false"
        android:layout_alignParentStart="true" />
</RelativeLayout>